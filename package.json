{
  "private": true,
  "name": "@saberhq/saber-common",
  "description": "Common libraries across Saber projects.",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{md,js,json,yml,yaml,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@project-serum/anchor": "^0.18.0",
    "@rushstack/eslint-patch": "^1.0.8",
    "@saberhq/eslint-config": "*",
    "@saberhq/eslint-config-react": "*",
    "@size-limit/file": "^6.0.3",
    "@size-limit/preset-small-lib": "^6.0.3",
    "@solana/spl-token-registry": "^0.2.286",
    "@solana/web3.js": "^1.30.1",
    "@types/bn.js": "^5.1.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.33",
    "bn.js": "^5.2.0",
    "buffer": "^6.0.3",
    "eslint": "^7.32.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^7.0.4",
    "jsbi": "^3.2.5",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.4",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "size-limit": "^6.0.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "build": "lerna run build",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "lint:ci": "eslint . --max-warnings=0",
    "prepare": "husky install",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "version": "0.0.0",
  "packageManager": "yarn@3.1.0"
}
